@*cargar el modelo en la vista*@
@model BibliotecaDB.Models.Empleado
@{
    //permite tener el titulo de la página con diferentes nombres
    ViewData["Title"] = "Editar Empleado";
}

<h1 class="text-center">Editar Empleado</h1>
<div>
    @*asp-action permite acceder a un método del controlador*@
    <form asp-action="Edit">
        <input type="hidden" asp-for="IdEmpleado" />
        <div>
            <label class="form-label">Nombre</label>
            @*asp-for es un helper que permite asignar el mismo nombre y id de la clase
            a los input*@
            <input type="text" class="form-control" asp-for="Nombre" />
            @*validation-for permite validar algunos parametros*@
            <span asp-validation-for="Nombre" class="badge bg-danger"></span>
        </div>
        <div>
            <label class="form-label">Apellido</label>
            @*asp-for es un helper que permite asignar el mismo nombre y id de la clase
            a los input*@
            <input type="text" class="form-control" asp-for="Apellido" />
            @*validation-for permite validar algunos parametros*@
            <span asp-validation-for="Apellido" class="badge bg-danger"></span>
        </div>
        <div>
            <label class="form-label">Cargo</label>
            @*asp-for es un helper que permite asignar el mismo nombre y id de la clase
            a los input*@
            <input type="text" class="form-control" asp-for="Cargo" />
            @*validation-for permite validar algunos parametros*@
            <span asp-validation-for="Cargo" class="badge bg-danger"></span>
        </div> 
        <div>
            <label class="form-label">Fecha Contratacion</label>
            @*asp-for es un helper que permite asignar el mismo nombre y id de la clase
            a los input*@
            <input type="text" class="form-control" asp-for="FechaContratacion" />
            @*validation-for permite validar algunos parametros*@
            <span asp-validation-for="FechaContratacion" class="badge bg-danger"></span>
        </div>
        <div class="text-end mt-3">
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Categoria">Volver</a>
            <input type="submit" class="btn btn-primary" value="Guardar" />
        </div>
    </form>
</div>
