@*cargar el modelo en la vista*@
@model BibliotecaDB.Models.Prestamo
@{
    //permite tener el titulo de la página con diferentes nombres
    ViewData["Title"] = "Editar Prestamo";
}

<h1 class="text-center">Editar Prestamo</h1>
<div>
    @*asp-action permite acceder a un método del controlador*@
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="IdPrestamo" />
        <div>
            <label>Cliente</label>
            @*asp-items permite cargar la lista con las categorías*@
            <select class="form-select" asp-for="IdCliente" asp-items="ViewBag.IdCliente">
                <option selected disabled>Seleccione Cliente</option>
            </select>
            <span class="badge bg-danger" asp-validation-for="IdCliente"></span>
        </div>
        <div>
            <label>Categoria</label>
            @*asp-items permite cargar la lista con las categorías*@
            <select class="form-select" asp-for="IdCategoria" asp-items="ViewBag.IdCategoria">
                <option selected disabled>Seleccione Categoría</option>
            </select>
            <span class="badge bg-danger" asp-validation-for="IdCategoria"></span>
        </div>
        <div>
            <label class="form-label">Prestamo</label>
            @*asp-for es un helper que permite asignar el mismo nombre y id de la clase
            a los input*@
            <input type="date" class="form-control" asp-for="FechaPrestamo" />
            @*validation-for permite validar algunos parametros*@
            <span asp-validation-for="FechaPrestamo" class="badge bg-danger"></span>
        </div>
        <div>
            <label class="form-label">Devolucion</label>
            @*asp-for es un helper que permite asignar el mismo nombre y id de la clase
            a los input*@
            <input type="date" class="form-control" asp-for="FechaDevolucionPrevista" />
            @*validation-for permite validar algunos parametros*@
            <span asp-validation-for="FechaDevolucionPrevista" class="badge bg-danger"></span>
        </div>
        <div>
            <label class="form-label">Estado</label>
            @*asp-for es un helper que permite asignar el mismo nombre y id de la clase
            a los input*@
            <input type="text" class="form-control" asp-for="Estado" />
            @*validation-for permite validar algunos parametros*@
            <span asp-validation-for="Estado" class="badge bg-danger"></span>
        </div>
        <div>
            <label class="form-label">Titulo</label>
            @*asp-for es un helper que permite asignar el mismo nombre y id de la clase
            a los input*@
            <input type="text" class="form-control" asp-for="Titulo" />
            @*validation-for permite validar algunos parametros*@
            <span asp-validation-for="Titulo" class="badge bg-danger"></span>
        </div>
        <div class="text-end mt-3">
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Prestamo">Volver</a>
            <input type="submit" class="btn btn-primary" value="Guardar" />
        </div>
    </form>
</div>